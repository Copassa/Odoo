[flake8]
# E123,E133,E226,E241,E242 are ignored by default by pep8 and flake8
# F811 is legal in odoo 8 when we implement 2 interfaces for a method
ignore = E123,E133,E226,E241,E242,F811
max-line-length = 79
exclude = __unported__,env,.git,env/odoo,addons-community,__init__.py,themes,mail_template.py,scripts,odoo_outlook,__pycache__,*/docs/conf.py,old,build,dist,dev_customer_credit_limit,access_apps,access_settings_menu,web_debranding,mail_base,access_restricted,ir_rule_protected
max-complexity = 10
